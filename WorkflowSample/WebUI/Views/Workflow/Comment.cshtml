@model WebUI.Model.WFComment
@{
    ViewData["Title"] = "WF - Comment";
}

<div class="row">
    <div class="col-md-3">
        <form action="CommentSend" method="post" class="form-horizontal">
            <h1>Name</h1>
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="NextComment" />
                        <label asp-for="NextComment"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Next</button>
                </div>
            </div>
        </form>
    </div>
</div>
